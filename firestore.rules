rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is accessing their own document
    function isOwnDocument() {
      return isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    // Bookings Collection
    // Users can only read, create, update, and delete their own bookings
    match /bookings/{bookingId} {
      // Allow read if user is authenticated and owns the booking
      allow read: if isAuthenticated() &&
                     (resource.data.userId == request.auth.uid);

      // Allow create if user is authenticated and the booking userId matches their uid
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.userEmail == request.auth.token.email;

      // Allow update if user owns the booking
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid;

      // Allow delete if user owns the booking
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // User Profiles Collection (if you want to store user preferences, history, etc.)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Users can create their own profile
      allow create: if isAuthenticated() &&
                       request.auth.uid == userId;

      // Users can update their own profile
      allow update: if isAuthenticated() &&
                       request.auth.uid == userId;

      // Users can delete their own profile
      allow delete: if isAuthenticated() &&
                       request.auth.uid == userId;
    }

    // User Favorites Collection
    match /favorites/{favoriteId} {
      // Allow read if user owns the favorite
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Allow create if user is creating their own favorite
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow update if user owns the favorite
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Allow delete if user owns the favorite
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // User Search History Collection (optional)
    match /searchHistory/{historyId} {
      // Allow read if user owns the history
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Allow create if user is creating their own history
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Allow update if user owns the history
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Allow delete if user owns the history
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // User Reviews Collection (optional - for when users can leave reviews)
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;

      // Users can create reviews if authenticated
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.userEmail == request.auth.token.email;

      // Users can update their own reviews
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Users can delete their own reviews
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // User Itineraries Collection
    match /itineraries/{itineraryId} {
      // Allow read if user owns the itinerary
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;

      // Allow create if user is creating their own itinerary
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.userEmail == request.auth.token.email;

      // Allow update if user owns the itinerary
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;

      // Allow delete if user owns the itinerary
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
